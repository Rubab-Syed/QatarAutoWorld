<% unless flash.empty? %>
  <script type="text/javascript">
    <% flash.each do |f| %>
      <% type = f[0].to_s.gsub('info','error').gsub('notice','success') %>
        <% if f[0].to_s == "booking" %>
          swal({
            title: 'We hope you will enjoy our Qayaamnawaazi :)',
            imageUrl: '<%= asset_path('smiley.jpg') %>',
            imageSize: '200x200'
          })
        <% else %>
          swal('<%= f[1] %>', '', '<%= type %>')
        <% end %>
      <% end %>
  </script>
<% end %>
