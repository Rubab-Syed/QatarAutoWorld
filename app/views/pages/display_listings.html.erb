<div class="container">
  <div class="col-md-12 display-main-picture">
    <%= image_tag @listings_pic, class: "image"%>
    <h1><%= @listings_title %></h1>
  </div>

  <div class="row search-form">
    <div class="col-md-12">
      <% if @listings and @listings_title != "northern areas" %>
        <label class="large-font">Let's find you a Mezbaan:</label>
        <%= form_tag search_path, :method => 'get' do %>
	  <div class="col-md-6">
	    <%= select_tag :location, options_for_select(Place.all.limit(1).collect{ |p| [p.name, p.id] }, selected: params[:search]), { class: "form-control medium-font select_tag" } %>
	  </div>
	  <div class="col-md-6">
	    <button type="submit" class="btn btn-default btn-primary large-font">Search</button>
	  </div>
	<% end %>
      <% end %>
    </div>
  </div>
  
  <% if @listings %>
    <%= render 'homes', homes: @listings %>
  <% else %>
    <div class="text-center large-font">
      <p class="coming-soon">HANG IN THERE, COMING SOON</p>
    </div>
  <% end %>
</div>
