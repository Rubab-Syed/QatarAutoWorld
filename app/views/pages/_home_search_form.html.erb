<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner outer" role="listbox">
  	<div class="carousel-item middle">
  		<div class="row inner">
  			<div class="row">
				<h4 class="search_form_slogan">Discover the best places</h4>
  			</div>
			  <%= form_tag search_path, method: :get, class: 'validate_form', id: "location_search_form" do %>	
				  <div class="container">
				    <div class="row row-condensed">
				      <div class="col-md-12">
				        <div class="form-section">
				          <div class="row">
		                <div class="col-md-6">
		                  <div class="form-group">
		                    <label class="sr-only" for="location">Location</label>
	              	      <%= select_tag :search, options_for_select(Place.all.collect{ |p| [p.name, p.id] }), { class: "search_select_field form-control validate[required]" } %>
		                    <!-- <input type="email" class="form-control" id="location" placeholder="Where?"> -->
		                  </div>
		                </div>
		                <div class="col-md-2">
		                  <div class="form-group">
		                    <label class="sr-only" for="checkin">Check in</label>
		                    <div class="input-group">
		                      <%= text_field_tag :start_date, params[:start_date], placeholder: "Check In", readonly: true,  class: "form-control" %>
		                      <span class="input-group-addon open-datepicker-span"><i class="glyphicon glyphicon-calendar"></i></span>
		                    </div>
		                  </div>
		                </div>
		                <div class="col-md-2">
		                  <div class="form-group">
		                    <label class="sr-only" for="checkout">Check out</label>
		                    <div class="input-group">
													<%= text_field_tag :end_date, params[:end_date], placeholder: "Check Out", readonly: true, class: "form-control" %>
		                      <span class="input-group-addon open-datepicker-span"><i class="glyphicon glyphicon-calendar"></i></span>
		                    </div>
		                  </div>
		                </div>
		                <div class="col-md-2">
		                  <button type="submit" class="btn btn-default btn-primary">Search</button>
		                </div>
				          </div>
				        </div>
				      </div>
				    </div>
				  </div>
				<% end %>
  		</div>
		  <div class="carousel-caption d-none d-md-block">
		  </div>
		</div>
  </div>
</div>
