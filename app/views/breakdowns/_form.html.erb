<style>
body {
  background: url(<%= asset_path "pat6.jpg" %>) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

.breakdown-form {
  width: 500px;
  margin-top:50px;
  border-radius:10px;
  margin-left:300px;
  background:rgba(16, 32, 90, 0.98);
}

@media only screen and (max-width: 990px) {
  .breakdown-form {
    margin-left:0px;
    margin-bottom:100px;
    width:100%;
  }
}

</style>

<script>
  $(function(){
    $( "#datepicker" ).datepicker();
  });
</script>

<div class="container" style="padding-bottom:-200px"> 
  <div class="panel-body col-md-offset-3 breakdown-form">
    <%= form_for(@breakdown, class: "validate_form") do |f| %>

      <div class="col-xs-6 space-1 form-group">
        <label class="large-font" style="font-weight:bold;color:white">
	  Name
	</label>
	<%= f.text_field :name, { class: "form-control validate[required]", style: "height:40px" } %>
      </div>

      <div class="col-xs-6 space-1 form-group">
	<label class="large-font" style="font-weight:bold;color:white">
	  Contact Number
	</label>
	<%= f.text_field :phone_number, placeholder: "", class: "form-control", style: "height:40px" %>
      </div>

      <div class="col-xs-6 space-1 form-group">
	<label class="large-font" style="font-weight:bold;color:white">
	  Check-In Date
	</label>
	<%= f.text_field :date, readonly: true, placeholder: "dd-mm-yy", id: "datepicker", class: "form-control", style: "height: 40px" %>
      </div>

      <div class="col-xs-6 space-1 form-group"> 
	<label class="large-font" style="font-weight:bold;color:white">Check-In Time</label>
	<div class="col-xs-9" style="margin-left:-15px">
	  <%= f.text_field :time, placeholder: "10", class: "form-control col-md-2", style: "height:40px" %>
	</div>
	<select class="col-xs-3">
	  <option value="am">AM</option>
	  <option value="pm">PM</option>
	</select>
      </div>
      
      <div class="text-center">
	<%= f.submit "BOOK", class: "btn btn-primary round_button_red large-font", style: "font-weight:bold" %>
      </div>
    <% end %>
  </div>
</div>

